{
    "name": "dotkernel/pong",
    "description": "Dotkernel Notification Application based on openswoole",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/dotkernel/pong",
    "authors": [
        {
            "name": "DotKernel Team",
            "email": "team@dotkernel.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true,
            "laminas/laminas-component-installer": true
        }
    },
    "extra": {
        "zf": {
            "component-whitelist": [
                "laminas/laminas-httphandlerrunner"
            ]
        }
    },
    "support": {
        "slack": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/expressive"
    },
    "require": {
        "php": "^8.0 || ^8.1",
        "ext-json": "*",
        "ext-openswoole": "*",
        "dotkernel/dot-cli": "^3.2",
        "guzzlehttp/guzzle": "^7.4",
        "laminas/laminas-cache-storage-adapter-filesystem": "^2.0.1",
        "laminas/laminas-config-aggregator": "^1.2.2",
        "laminas/laminas-dependency-plugin": "^2.2.0",
        "laminas/laminas-log": "^2.12",
        "laminas/laminas-servicemanager": "^3.4",
        "predis/predis": "^1.1.1",
        "roave/psr-container-doctrine": "^3.5.0"
    },
    "require-dev": {
        "filp/whoops": "^2.7.2",
        "phpunit/phpunit": "^9.1.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5.5",
        "symfony/messenger": "^5.0.8",
        "laminas/laminas-development-mode": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Notification\\": "src/Notification/",
            "Dot\\Swoole\\": "src/Swoole/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php bin/dot-swoole start",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
